<div class="container">
  <h1>Flats</h1>
  <%@flats.each do |flat| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= flat.name%></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= flat.address%></h6>
        <p class="card-text"><%= flat.description.byteslice(0, 100)%>...</p>
        <a href="#" class="card-link text-primary"><%= link_to 'more info', flat_path(flat)%></a>
        <a href="#" class="card-link text-warning"><%= link_to 'edit', edit_flat_path(flat)%></a>
      </div>
    </div>
  <%end %>
</div>

