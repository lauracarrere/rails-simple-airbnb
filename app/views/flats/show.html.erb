<div class="container">
  <div class="row mt-2">
    <div class="col-8">
      <div class="flat">
        <h2>
          <%=@flat.name%>
        </h2>
        <i><%= link_to '', edit_flat_path, class: 'fas fa-edit btn btn-success m-3 p-2' %></i>
        <i><%= link_to '', flat_path(@flat), method: :delete, class: 'fas fa-trash btn btn-danger m-3 p-2' %></i>
        <p>
          <%= @flat.address%>
        </p>
        <p>
          <%= @flat.description%>
        </p>
        <p>
          EUR <%= @flat.price_per_night%>
        </p>
        <p>
          <%= @flat.number_of_guests%>
        </p>
        <%= link_to 'back to list', flats_path%>
      </div>
    </div>
  </div>
</div>
